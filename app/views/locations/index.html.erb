<p id="notice"><%= notice %></p>
<div class="search">
<%= form_tag(locations_path, :method => 'GET') do %>
  <strong> Specific ID or user? </strong>
   <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>
</div>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>#ID</th>
      <th>User</th>
      <th>Description</th>
      <th>Details</th>
      <th>Edit</th>   
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.id %></td>
        <td><%= location.user.name %></td>
        <td><%= location.desc %></td>
        <td><%= link_to 'Details ', location,  class => "btn btn-primary", :remote => true %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class => "btn btn-info" %></td>
  
      </tr>
    <% end %>
  </tbody>
</table>

<br>


