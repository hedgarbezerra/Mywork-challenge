<p id="notice"><%= notice %></p>
<% provide :head_tags do %>
<meta name='turbolinks-visit-control' content='reload'>
<script>
document.addEventListener("DOMContentLoaded", function() {
    var locations = <%= raw locToJson %> ;
    initMap2(locations);
    startTime();

});
</script>
<% end %>
<div id="clock" class="clock"></div>
<%= form_with(model: timetrack, local: true) do |form| %>
<br>
<div class="fox">
    <h1>Savepoint</h1>
    <%= form.label :address %> <br>
    <%= form.text_field :address, {id: 'address', placeholder: 'Type an address'} %> <br>
    <%= form.label :latitude %> <br>
    <%= form.text_field :latitude, {id: 'latitude' } %> <br>
    <%= form.label :longitude%> <br>
    <%= form.text_field :longitude, {id: 'longitude' }%> <br>
    <%= form.label :'Any comments?' %> <br>
    <%= form.text_field :comment %> <br>
    <%= form.label :'Your ID' %> <br>
    <%= form.text_field :user_id, :value => current_user.id, :readonly => true %>
    <div class="map" id="map2"></div>
    <%= form.submit id: "submit" %>
</div>
<% end %>