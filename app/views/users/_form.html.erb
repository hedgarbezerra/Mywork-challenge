<p id="notice"><%= notice %></p>
<%= form_with(model: user, local: true,  :html => {:id => "form", :class => "loginbox"}) do |form| %>
    <%= form.label :Name %>
    <%= form.text_field :name %>
    <%= form.label :Email %>
    <%= form.text_field :email %>
    <%= form.label :Username %>
    <%= form.text_field :username %>
    <%= form.label :Password %>
    <%= form.password_field :password %>
    <% if !user_signed_in? %>
    <%= form.label :User_role %>
    <br>  
    <%= form.radio_button :user_role, 1,  class:"left" %> Manager 
    <%= form.radio_button :user_role, 2, class:"right" %> Employee
    <br><br>
    <%end %>
    <%= form.submit %>
<% end %>
